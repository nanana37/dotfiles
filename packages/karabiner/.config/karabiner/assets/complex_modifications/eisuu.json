{
    "title": "Japanese input mode switching",
    "rules": [
        {
            "description": "Right Command to Eisuu (英数), Right Option to Kana (かな)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_option",
                        "modifiers": {
                            "optional": [
                                "any"
                          ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "japanese_kana"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}